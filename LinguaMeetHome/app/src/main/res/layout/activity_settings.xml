<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.troy.linguameethome.Settings">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/switch1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:checked="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/switch2"
        android:layout_marginTop="34dp"
        android:checked="true"
        android:layout_below="@+id/switch1"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="?attr/settingsButton"
            android:onClick="options"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="?attr/homeButton"
            android:onClick="homeScreen"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="?attr/profileButton"
            android:id="@+id/MyLM"
            android:onClick="profile"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/imageButton2"
            android:src="?attr/chatButton"
            android:onClick="messages"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color Themes"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/textView2">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/custom1"
            android:id="@+id/custom1"
            android:layout_weight="1"
            android:background="@drawable/rectangle_button_shape"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/custom2"
            android:id="@+id/custom2"
            android:layout_weight="1"
            android:background="@drawable/rectangle_button_shape"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/custom3"
            android:id="@+id/custom3"
            android:layout_weight="1"
            android:background="@drawable/rectangle_button_shape"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>


</RelativeLayout>
