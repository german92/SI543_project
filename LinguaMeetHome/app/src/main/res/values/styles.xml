
<resources>
    <!-- custom attributes for setting drawable based on theme -->
    <attr name="homeButton" format="reference" />
    <attr name="settingsButton" format="reference" />
    <attr name="chatButton" format ="reference" />
    <attr name="profileButton" format="reference" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTheme1" parent="android:Theme.Light">

        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="settingsButton">@drawable/settings</item>
        <item name="homeButton">@drawable/home</item>
        <item name="chatButton">@drawable/chat_logo</item>
        <item name="profileButton">@drawable/my_lm_logo</item>
    </style>

    <style name="CustomTheme2" parent="android:Theme.Black">

        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="settingsButton">@drawable/settings_white</item>
        <item name="homeButton">@drawable/home_white</item>
        <item name="chatButton">@drawable/chat_logo</item>
        <item name="profileButton">@drawable/my_lm_logo</item>

   </style>

    <style name="CustomTheme3" parent="android:Theme.Black">

        <item name="android:background">#00274c</item>
        <item name="android:textColor">#ffcb05</item>
        <item name="settingsButton">@drawable/settings_maize</item>
        <item name="homeButton">@drawable/home_maize</item>
        <item name="chatButton">@drawable/chat_logo</item>
        <item name="profileButton">@drawable/my_lm_logo</item>

    </style>

</resources>
